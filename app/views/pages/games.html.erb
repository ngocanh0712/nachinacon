<% content_for :og_tags do %>
  <meta property="og:title" content="Vui Choi - NaChiNaCon">
  <meta property="og:description" content="Tro choi va hoat dong tuong tac vui nhon cua be Nacon">
<% end %>

<section class="min-h-screen py-12 px-4 md:px-6 lg:px-8 relative overflow-hidden" style="background: linear-gradient(180deg, #FFFBF8 0%, #F8FDFC 50%, #FDF5F5 100%);">
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 -right-20 w-72 h-72 rounded-full blur-3xl pulse-glow" style="background: rgba(193, 221, 216, 0.25);"></div>
    <div class="absolute bottom-20 -left-20 w-64 h-64 rounded-full blur-3xl pulse-glow" style="background: rgba(242, 194, 194, 0.25); animation-delay: 2s;"></div>
  </div>

  <div class="max-w-4xl mx-auto relative z-10">
    <!-- Header -->
    <div class="text-center mb-10">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-4" style="background: rgba(193, 221, 216, 0.15);">
        <span style="color: #A8CEC8;">üéÆ</span>
        <span class="font-heading font-semibold text-sm" style="color: #7FB5AC;">Vui Choi</span>
      </div>
      <h1 class="font-accent italic text-4xl md:text-5xl mb-3" style="color: #C1DDD8;">Tro Choi & Tuong Tac</h1>
      <p class="font-body text-gray-500 max-w-md mx-auto">Kham pha ky niem cua be qua nhung tro choi thu vi</p>
    </div>

    <!-- Game Cards Grid -->
    <div class="grid sm:grid-cols-2 gap-6">
      <!-- Memory Game -->
      <%= link_to games_memory_path, class: "glass-card rounded-2xl p-6 shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-[1.02] group block", style: "text-decoration:none;" do %>
        <div class="flex items-start gap-4">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center flex-shrink-0" style="background: rgba(193, 221, 216, 0.2);">
            <span class="text-2xl">üÉè</span>
          </div>
          <div>
            <h3 class="font-heading font-bold text-lg text-gray-800 mb-1 group-hover:text-gray-900">Memory Game</h3>
            <p class="font-body text-sm text-gray-500">Lat the tim cap anh giong nhau. 3 do kho - thach thuc tri nho cua ban!</p>
          </div>
        </div>
        <div class="mt-4 flex items-center gap-2 font-heading font-semibold text-sm" style="color: #A8CEC8;">
          <span>Choi ngay</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4 transition-transform group-hover:translate-x-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </div>
      <% end %>

      <!-- Guess the Age -->
      <%= link_to games_guess_age_path, class: "glass-card rounded-2xl p-6 shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-[1.02] group block", style: "text-decoration:none;" do %>
        <div class="flex items-start gap-4">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center flex-shrink-0" style="background: rgba(242, 194, 194, 0.2);">
            <span class="text-2xl">üßí</span>
          </div>
          <div>
            <h3 class="font-heading font-bold text-lg text-gray-800 mb-1 group-hover:text-gray-900">Doan Tuoi Nacon</h3>
            <p class="font-body text-sm text-gray-500">Nhin anh va doan Nacon bao nhieu tuoi. 10 cau hoi moi luot choi!</p>
          </div>
        </div>
        <div class="mt-4 flex items-center gap-2 font-heading font-semibold text-sm" style="color: #D4A0A0;">
          <span>Choi ngay</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4 transition-transform group-hover:translate-x-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </div>
      <% end %>

      <!-- Spin the Wheel -->
      <%= link_to spin_wheel_path, class: "glass-card rounded-2xl p-6 shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-[1.02] group block", style: "text-decoration:none;" do %>
        <div class="flex items-start gap-4">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center flex-shrink-0" style="background: rgba(232, 176, 176, 0.2);">
            <span class="text-2xl">üé°</span>
          </div>
          <div>
            <h3 class="font-heading font-bold text-lg text-gray-800 mb-1 group-hover:text-gray-900">Vong Quay Thuong Phat</h3>
            <p class="font-body text-sm text-gray-500">Quay vong quay thuong phat vui ve cung gia dinh dip Tet!</p>
          </div>
        </div>
        <div class="mt-4 flex items-center gap-2 font-heading font-semibold text-sm" style="color: #E8B0B0;">
          <span>Quay ngay</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4 transition-transform group-hover:translate-x-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </div>
      <% end %>

      <!-- Then vs Now -->
      <%= link_to then_vs_now_path, class: "glass-card rounded-2xl p-6 shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-[1.02] group block", style: "text-decoration:none;" do %>
        <div class="flex items-start gap-4">
          <div class="w-14 h-14 rounded-2xl flex items-center justify-center flex-shrink-0" style="background: rgba(192, 223, 208, 0.2);">
            <span class="text-2xl">üîÑ</span>
          </div>
          <div>
            <h3 class="font-heading font-bold text-lg text-gray-800 mb-1 group-hover:text-gray-900">Then vs Now</h3>
            <p class="font-body text-sm text-gray-500">So sanh anh truoc va bay gio - xem be lon nhanh the nao!</p>
          </div>
        </div>
        <div class="mt-4 flex items-center gap-2 font-heading font-semibold text-sm" style="color: #8BB8AA;">
          <span>Xem ngay</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4 transition-transform group-hover:translate-x-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </div>
      <% end %>
    </div>
  </div>
</section>
