<!-- Header -->
<section class="pt-8 pb-12 px-4 md:px-6 lg:px-8 relative overflow-hidden">
  <div class="absolute top-0 left-0 w-64 h-64 rounded-full blur-3xl animate-pulse-soft" style="background-color: rgba(242, 194, 194, 0.3);"></div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div class="text-center animate-fade-in-up">
      <p class="font-accent text-xl mb-2" style="color: #E8B0B0;">Những bước tiến</p>
      <h1 class="font-heading font-bold text-4xl md:text-5xl text-gray-800 mb-4">Milestones</h1>
      <p class="font-body text-lg text-gray-600 max-w-2xl mx-auto">
        Những mốc quan trọng trong hành trình lớn lên của bé - từ nụ cười đầu tiên đến bước chân đầu tiên.
      </p>
    </div>
  </div>
</section>

<!-- Progress Bar -->
<section class="pb-8 px-4 md:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <div class="glass rounded-2xl p-6 shadow-soft">
      <div class="flex items-center justify-between mb-4">
        <span class="font-heading font-semibold text-gray-800">Tiến độ phát triển</span>
        <span class="font-body text-gray-500"><%= @achieved.count %>/<%= @achieved.count + @pending.count %> milestones</span>
      </div>
      <div class="w-full h-3 rounded-full overflow-hidden" style="background-color: #E0EEEB;">
        <% progress = @achieved.count + @pending.count > 0 ? (@achieved.count.to_f / (@achieved.count + @pending.count) * 100).round : 0 %>
        <div class="h-full rounded-full transition-all duration-500" style="width: <%= progress %>%; background-color: #C0DFD0;"></div>
      </div>
    </div>
  </div>
</section>

<!-- Achieved Milestones -->
<section class="py-8 px-4 md:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h2 class="font-heading font-bold text-2xl text-gray-800 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" style="color: #C0DFD0;">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Đã đạt được
      </h2>
    </div>

    <% if @achieved.any? %>
      <!-- Vertical Timeline -->
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-6 md:left-8 top-0 bottom-0 w-0.5" style="background-color: #C1DDD8;"></div>

        <div class="space-y-6 stagger-children">
          <% @achieved.each do |milestone| %>
            <div class="relative pl-16 md:pl-20">
              <!-- Timeline dot -->
              <div class="absolute left-4 md:left-6 w-4 h-4 rounded-full border-4 border-white shadow-soft" style="background-color: #C0DFD0;"></div>

              <!-- Milestone card -->
              <div class="bg-white rounded-2xl p-6 shadow-soft card-hover">
                <div class="flex flex-col md:flex-row md:items-start gap-4">
                  <% if milestone.photo.attached? %>
                    <div class="w-20 h-20 rounded-xl overflow-hidden flex-shrink-0">
                      <%= image_tag milestone.photo.variant(resize_to_fill: [160, 160]), class: "w-full h-full object-cover" %>
                    </div>
                  <% else %>
                    <div class="w-20 h-20 rounded-xl flex-shrink-0 flex items-center justify-center" style="background-color: #F8D8D8;">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-gray-500">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                      </svg>
                    </div>
                  <% end %>

                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-2">
                      <span class="px-3 py-1 rounded-full text-xs font-heading font-semibold" style="background-color: #E0EEEB;">
                        <%= milestone.achieved_at.strftime("%d/%m/%Y") %>
                      </span>
                    </div>
                    <h3 class="font-heading font-bold text-lg text-gray-800 mb-2"><%= milestone.name %></h3>
                    <% if milestone.description.present? %>
                      <p class="font-body text-gray-600"><%= milestone.description %></p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12 rounded-2xl" style="background-color: #FFFBF7;">
        <p class="font-body text-gray-500">Chưa có milestone nào được đánh dấu hoàn thành.</p>
      </div>
    <% end %>
  </div>
</section>

<!-- Pending Milestones -->
<% if @pending.any? %>
  <section class="py-8 px-4 md:px-6 lg:px-8" style="background-color: #FFFBF7;">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h2 class="font-heading font-bold text-2xl text-gray-800 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" style="color: #F2C2C2;">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Đang chờ đợi
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 stagger-children">
        <% @pending.each do |milestone| %>
          <div class="bg-white rounded-2xl p-5 shadow-soft card-hover opacity-70">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center" style="background-color: #F8D8D8;">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-400">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-semibold text-gray-700"><%= milestone.name %></h3>
                <p class="font-body text-sm text-gray-400">Sắp tới...</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
