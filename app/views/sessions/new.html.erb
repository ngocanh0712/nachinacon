<div class="min-h-screen flex items-center justify-center" style="background-color: #F6F2EC;">
  <div class="w-full max-w-md p-8 bg-white rounded-2xl shadow-lg">
    <!-- Logo -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full mb-4" style="background-color: #C1DDD8;">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-gray-700">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
        </svg>
      </div>
      <h1 class="font-heading font-bold text-2xl text-gray-800">NaChiNaCon</h1>
      <p class="text-gray-500 mt-1">Đăng nhập để quản lý</p>
    </div>

    <%= form_with url: admin_login_path, method: :post, local: true, class: "space-y-6" do |f| %>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input type="email" name="email" id="email" required
          class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:border-transparent transition-all"
          style="--tw-ring-color: #C1DDD8;"
          placeholder="admin@nachinacon.com">
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu</label>
        <input type="password" name="password" id="password" required
          class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:border-transparent transition-all"
          style="--tw-ring-color: #C1DDD8;"
          placeholder="Nhập mật khẩu">
      </div>

      <button type="submit"
        class="w-full py-3 px-4 rounded-lg font-heading font-semibold text-gray-800 transition-colors cursor-pointer"
        style="background-color: #C1DDD8;"
        onmouseover="this.style.backgroundColor='#A8CEC8'"
        onmouseout="this.style.backgroundColor='#C1DDD8'">
        Đăng nhập
      </button>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to 'Về trang chủ', root_path, class: "text-gray-500 hover:text-gray-700 text-sm" %>
    </div>
  </div>
</div>
