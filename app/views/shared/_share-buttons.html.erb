<%# Share buttons for memories/pages
     Locals: url (String), title (String) %>
<% share_url = url || request.original_url %>
<% share_title = title || "NaChiNaCon - Kỷ niệm của bé" %>
<% encoded_url = ERB::Util.url_encode(share_url) %>
<% encoded_text = ERB::Util.url_encode("#{share_title} #{share_url}") %>

<div data-controller="share" data-share-url-value="<%= share_url %>" data-share-title-value="<%= share_title %>" class="flex items-center gap-3 flex-wrap">
  <span class="font-body text-sm text-gray-400 mr-1">Chia se:</span>

  <!-- Native Share (mobile) -->
  <button data-action="click->share#nativeShare" data-share-target="nativeBtn"
    class="hidden w-11 h-11 rounded-xl transition-all duration-200 hover:scale-110 hover:shadow-md flex items-center justify-center"
    style="background: linear-gradient(135deg, #C1DDD8, #A8CEC8);" title="Chia se">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-white">
      <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314m-9.566 7.5l9.566 5.314m0 0a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935-2.186zm0-12.814a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.933 2.185z" />
    </svg>
  </button>

  <!-- Facebook -->
  <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encoded_url %>" target="_blank" rel="noopener"
    class="w-11 h-11 rounded-xl transition-all duration-200 hover:scale-110 hover:shadow-md flex items-center justify-center"
    style="background: linear-gradient(135deg, #1877F2, #0C63D4);" title="Facebook">
    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
  </a>

  <!-- Zalo -->
  <a href="https://zalo.me/share?url=<%= encoded_url %>" target="_blank" rel="noopener"
    class="w-11 h-11 rounded-xl transition-all duration-200 hover:scale-110 hover:shadow-md flex items-center justify-center"
    title="Zalo">
    <%= image_tag 'zalo-icon.png', alt: 'Zalo', style: 'width:24px;height:24px;border-radius:4px;' %>
  </a>

  <!-- WhatsApp -->
  <a href="https://api.whatsapp.com/send?text=<%= encoded_text %>" target="_blank" rel="noopener"
    class="w-11 h-11 rounded-xl transition-all duration-200 hover:scale-110 hover:shadow-md flex items-center justify-center"
    style="background: linear-gradient(135deg, #25D366, #128C7E);" title="WhatsApp">
    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
  </a>

  <!-- Copy Link -->
  <button data-action="click->share#copyLink" data-share-target="copyBtn"
    class="relative w-11 h-11 rounded-xl transition-all duration-200 hover:scale-110 hover:shadow-md flex items-center justify-center"
    style="background: linear-gradient(135deg, #E0EEEB, #C1DDD8);" title="Sao chep link">
    <svg data-share-target="copyIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-gray-600">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9.75a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
    </svg>
    <svg data-share-target="checkIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-green-600 hidden">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
    </svg>
    <!-- Tooltip -->
    <span data-share-target="tooltip" class="absolute -top-8 left-1/2 -translate-x-1/2 px-2 py-1 rounded-lg text-xs font-body text-white whitespace-nowrap opacity-0 transition-opacity pointer-events-none" style="background: #333;">
      Da sao chep!
    </span>
  </button>
</div>
