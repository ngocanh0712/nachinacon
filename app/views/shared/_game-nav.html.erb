<%# Game page top navigation bar
     Locals: title (String), icon (String emoji) %>
<div class="flex items-center justify-between mb-6">
  <%= link_to games_hub_path, style: "display:inline-flex;align-items:center;gap:8px;padding:8px 16px;border-radius:12px;background:rgba(255,255,255,0.8);backdrop-filter:blur(10px);box-shadow:0 2px 8px rgba(0,0,0,0.06);border:1px solid rgba(255,255,255,0.5);text-decoration:none;transition:all 0.2s ease;", class: "hover:shadow-md" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" style="width:16px;height:16px;color:#9CA3AF;">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
    </svg>
    <span class="font-heading font-semibold" style="font-size:13px;color:#6B7280;">Games</span>
  <% end %>

  <div style="display:inline-flex;align-items:center;gap:8px;padding:8px 16px;border-radius:12px;background:rgba(255,255,255,0.8);backdrop-filter:blur(10px);box-shadow:0 2px 8px rgba(0,0,0,0.06);border:1px solid rgba(255,255,255,0.5);">
    <span style="font-size:16px;"><%= icon %></span>
    <span class="font-heading font-bold" style="font-size:13px;color:#374151;"><%= title %></span>
  </div>
</div>
