            <%= link_to root_path, target: "_blank", class: "flex items-center gap-3 px-4 py-3 rounded-xl font-heading font-semibold text-gray-600" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Xem trang
            <% end %>

            <%= button_to admin_logout_path, method: :delete, class: "flex items-center gap-3 px-4 py-3 rounded-xl font-heading font-semibold text-red-600 w-full transition-colors cursor-pointer", onmouseover: "this.style.backgroundColor='#FEF2F2'", onmouseout: "this.style.backgroundColor=''" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
              </svg>
              Đăng xuất
            <% end %>
          </div>
        </nav>
      </aside>
    </div>

    <!-- Main Content -->
    <main class="lg:ml-64 min-h-screen">
      <!-- Top Bar (Desktop) -->
      <header class="hidden lg:block bg-white shadow-sm sticky top-0 z-30">
        <div class="px-4 md:px-6 lg:px-8 py-4">
          <div class="flex items-center justify-between">
            <div>
              <h1 class="font-heading font-bold text-2xl text-gray-800"><%= yield :page_title %></h1>
              <% if content_for?(:page_subtitle) %>
                <p class="font-body text-sm text-gray-500"><%= yield :page_subtitle %></p>
              <% end %>
            </div>

            <div class="flex items-center gap-3">
              <%= link_to root_path, target: "_blank", class: "hidden md:flex items-center gap-2 px-4 py-2 text-gray-600 hover:text-gray-800 font-heading font-semibold transition-colors" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Xem trang
              <% end %>
              <%= link_to new_admin_memory_path, class: "flex items-center gap-2 px-5 py-2.5 rounded-xl font-heading font-semibold text-gray-800 shadow-md hover:shadow-lg transition-all", style: "background-color: #C1DDD8;" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
                <span class="hidden sm:inline">Thêm kỷ niệm</span>
              <% end %>
            </div>
          </div>
        </div>
      </header>

      <!-- Flash messages -->
      <% if flash[:notice] %>
        <div id="flash-notice" class="fixed top-20 lg:top-4 right-4 z-50 px-5 py-3 rounded-xl shadow-lg bg-white border" style="border-color: #C0DFD0;">
          <div class="flex items-center gap-3">
            <div class="w-7 h-7 rounded-full flex items-center justify-center" style="background: #C0DFD0;">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="font-heading font-medium text-gray-700 text-sm"><%= flash[:notice] %></span>
          </div>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div id="flash-alert" class="fixed top-20 lg:top-4 right-4 z-50 px-5 py-3 rounded-xl shadow-lg bg-white border" style="border-color: #F2C2C2;">
          <div class="flex items-center gap-3">
            <div class="w-7 h-7 rounded-full flex items-center justify-center" style="background: #F2C2C2;">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
              </svg>
            </div>
            <span class="font-heading font-medium text-gray-700 text-sm"><%= flash[:alert] %></span>
          </div>
        </div>
      <% end %>

      <!-- Page Content -->
      <div class="p-4 md:p-6 lg:p-8 pt-20 lg:pt-4">
        <%= yield %>
      </div>
    </main>

  <% else %>
    <!-- Not logged in - just render content -->
    <%= yield %>
  <% end %>

  <script>
    // Mobile menu toggle
    document.getElementById('mobile-menu-toggle')?.addEventListener('click', function() {
      document.getElementById('mobile-sidebar').classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    });

    document.getElementById('mobile-menu-close')?.addEventListener('click', closeMobileMenu);
    document.getElementById('mobile-sidebar-backdrop')?.addEventListener('click', closeMobileMenu);

    function closeMobileMenu() {
      document.getElementById('mobile-sidebar').classList.add('hidden');
      document.body.style.overflow = '';
    }

    // Auto-hide flash messages
    setTimeout(() => {
      ['flash-notice', 'flash-alert'].forEach(id => {
        const el = document.getElementById(id);
        if (el) {
          el.style.opacity = '0';
          el.style.transition = 'opacity 0.5s ease';
          setTimeout(() => el.remove(), 500);
        }
      });
    }, 4000);
  </script>
</body>
</html>
