<div class="space-y-8">
  <!-- Page Header -->
  <div>
    <h1 class="font-heading font-bold text-2xl text-gray-800">Dashboard</h1>
    <p class="font-body text-sm text-gray-500 mt-1">Tổng quan về kỷ niệm của bé</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
    <!-- Total Memories -->
    <div class="bg-white rounded-2xl p-5 shadow-md hover:shadow-lg transition-shadow duration-300">
      <div class="flex items-start justify-between">
        <div>
          <p class="font-body text-sm text-gray-500 mb-1">Tổng kỷ niệm</p>
          <p class="font-heading font-bold text-3xl text-gray-800"><%= @total_memories %></p>
        </div>
        <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, #E0EEEB 0%, #C1DDD8 100%);">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-700">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Photos -->
    <div class="bg-white rounded-2xl p-5 shadow-md hover:shadow-lg transition-shadow duration-300">
      <div class="flex items-start justify-between">
        <div>
          <p class="font-body text-sm text-gray-500 mb-1">Ảnh</p>
          <p class="font-heading font-bold text-3xl text-gray-800"><%= @total_photos %></p>
        </div>
        <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, #F8D8D8 0%, #F2C2C2 100%);">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-700">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 015.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 00-1.134-.175 2.31 2.31 0 01-1.64-1.055l-.822-1.316a2.192 2.192 0 00-1.736-1.039 48.774 48.774 0 00-5.232 0 2.192 2.192 0 00-1.736 1.039l-.821 1.316z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zM18.75 10.5h.008v.008h-.008V10.5z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Videos -->
    <div class="bg-white rounded-2xl p-5 shadow-md hover:shadow-lg transition-shadow duration-300">
      <div class="flex items-start justify-between">
        <div>
          <p class="font-body text-sm text-gray-500 mb-1">Video</p>
          <p class="font-heading font-bold text-3xl text-gray-800"><%= @total_videos %></p>
        </div>
        <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, #C0DFD0 0%, #A8D1BD 100%);">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-700">
            <path stroke-linecap="round" d="M15.75 10.5l4.72-4.72a.75.75 0 011.28.53v11.38a.75.75 0 01-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 002.25-2.25v-9a2.25 2.25 0 00-2.25-2.25h-9A2.25 2.25 0 002.25 7.5v9a2.25 2.25 0 002.25 2.25z" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Albums -->
    <div class="bg-white rounded-2xl p-5 shadow-md hover:shadow-lg transition-shadow duration-300">
      <div class="flex items-start justify-between">
        <div>
          <p class="font-body text-sm text-gray-500 mb-1">Albums</p>
          <p class="font-heading font-bold text-3xl text-gray-800"><%= @total_albums %></p>
        </div>
        <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, #F8D8D8 0%, #E8B0B0 100%);">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-700">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Milestones Stats -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="bg-white rounded-2xl p-5 shadow-md hover:shadow-lg transition-shadow duration-300">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 rounded-xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, #C0DFD0 0%, #A8D1BD 100%);">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-gray-700">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
          </svg>
        </div>
        <div>
          <p class="font-heading font-bold text-3xl text-gray-800"><%= @achieved_milestones %></p>
          <p class="font-body text-sm text-gray-500">Milestones đạt được</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl p-5 shadow-md hover:shadow-lg transition-shadow duration-300">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 rounded-xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, #F8D8D8 0%, #F2C2C2 100%);">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-gray-700">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="font-heading font-bold text-3xl text-gray-800"><%= @pending_milestones %></p>
          <p class="font-body text-sm text-gray-500">Milestones chờ đạt</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <%= link_to new_admin_memory_path, class: "block bg-white rounded-2xl p-6 shadow-md hover:shadow-lg transition-all duration-300 border-2 border-transparent", style: "border-color: transparent;", onmouseover: "this.style.borderColor='#C1DDD8'", onmouseout: "this.style.borderColor='transparent'" do %>
      <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-4" style="background-color: #E0EEEB;">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-gray-700">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
      </div>
      <h3 class="font-heading font-bold text-lg text-gray-800 mb-1">Thêm kỷ niệm</h3>
      <p class="font-body text-sm text-gray-500">Upload ảnh hoặc video mới</p>
    <% end %>

    <%= link_to new_admin_milestone_path, class: "block bg-white rounded-2xl p-6 shadow-md hover:shadow-lg transition-all duration-300 border-2 border-transparent", style: "border-color: transparent;", onmouseover: "this.style.borderColor='#F2C2C2'", onmouseout: "this.style.borderColor='transparent'" do %>
      <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-4" style="background-color: #F8D8D8;">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-gray-700">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
        </svg>
      </div>
      <h3 class="font-heading font-bold text-lg text-gray-800 mb-1">Thêm milestone</h3>
      <p class="font-body text-sm text-gray-500">Ghi lại mốc quan trọng</p>
    <% end %>

    <%= link_to new_admin_album_path, class: "block bg-white rounded-2xl p-6 shadow-md hover:shadow-lg transition-all duration-300 border-2 border-transparent", style: "border-color: transparent;", onmouseover: "this.style.borderColor='#C0DFD0'", onmouseout: "this.style.borderColor='transparent'" do %>
      <div class="w-14 h-14 rounded-2xl flex items-center justify-center mb-4" style="background-color: #C0DFD0;">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-gray-700">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 10.5v6m3-3H9m4.06-7.19l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
        </svg>
      </div>
      <h3 class="font-heading font-bold text-lg text-gray-800 mb-1">Tạo album</h3>
      <p class="font-body text-sm text-gray-500">Nhóm kỷ niệm theo chủ đề</p>
    <% end %>
  </div>

  <!-- Recent Uploads -->
  <div class="bg-white rounded-2xl shadow-md overflow-hidden">
    <div class="p-6 border-b border-gray-100 flex items-center justify-between">
      <div>
        <h2 class="font-heading font-bold text-xl text-gray-800">Kỷ niệm gần đây</h2>
        <p class="font-body text-sm text-gray-500">Những kỷ niệm mới nhất</p>
      </div>
      <%= link_to admin_memories_path, class: "font-heading font-semibold text-sm hover:underline", style: "color: #A8CEC8;" do %>
        Xem tất cả →
      <% end %>
    </div>

    <% if @recent_memories.any? %>
      <div class="divide-y divide-gray-100">
        <% @recent_memories.each do |memory| %>
          <div class="p-4 md:p-6 hover:bg-gray-50 transition-colors duration-200">
            <div class="flex items-center gap-4">
              <!-- Thumbnail -->
              <div class="w-16 h-16 md:w-20 md:h-20 rounded-xl flex-shrink-0 overflow-hidden" style="background: linear-gradient(135deg, rgba(193,221,216,0.3) 0%, rgba(242,194,194,0.3) 100%);">
                <% if memory.media.attached? %>
                  <% if memory.memory_type == 'video' %>
                    <div class="w-full h-full flex items-center justify-center bg-gray-100">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-gray-400">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z" />
                      </svg>
                    </div>
                  <% else %>
                    <%= image_tag memory.media.variant(resize_to_fill: [80, 80, { quality: 90 }]), class: "w-full h-full object-cover" %>
                  <% end %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-gray-400">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                    </svg>
                  </div>
                <% end %>
              </div>

              <!-- Info -->
              <div class="flex-1 min-w-0">
                <h3 class="font-heading font-semibold text-gray-800 truncate"><%= memory.title %></h3>
                <p class="font-body text-sm text-gray-500 truncate"><%= memory.caption %></p>
                <div class="flex items-center gap-3 mt-1">
                  <span class="font-body text-xs text-gray-400"><%= memory.taken_at.strftime("%d/%m/%Y") %></span>
                  <span class="px-2 py-0.5 rounded-full text-xs font-body" style="background-color: #E0EEEB; color: #333;">
                    <%= memory.memory_type == 'photo' ? 'Ảnh' : 'Video' %>
                  </span>
                </div>
              </div>

              <!-- Actions -->
              <div class="flex items-center gap-2">
                <%= link_to edit_admin_memory_path(memory), class: "p-2 rounded-lg hover:bg-gray-100 transition-colors", title: "Sửa" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400 hover:text-gray-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                  </svg>
                <% end %>
                <%= button_to admin_memory_path(memory), method: :delete, data: { turbo_confirm: "Xóa kỷ niệm này?" }, class: "p-2 rounded-lg transition-colors cursor-pointer", title: "Xóa", onmouseover: "this.style.backgroundColor='#FEF2F2'", onmouseout: "this.style.backgroundColor=''" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="p-12 text-center">
        <div class="w-20 h-20 rounded-full mx-auto mb-6 flex items-center justify-center" style="background-color: #E0EEEB;">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-gray-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
          </svg>
        </div>
        <h3 class="font-heading font-bold text-xl text-gray-800 mb-2">Chưa có kỷ niệm nào</h3>
        <p class="font-body text-gray-500 mb-6">Hãy bắt đầu lưu giữ những khoảnh khắc đáng nhớ của bé</p>
        <%= link_to new_admin_memory_path, class: "inline-flex items-center gap-2 px-6 py-3 rounded-xl font-heading font-semibold text-gray-800 shadow-md hover:shadow-lg transition-all", style: "background: linear-gradient(135deg, #C1DDD8 0%, #A8CEC8 100%);" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          Thêm kỷ niệm đầu tiên
        <% end %>
      </div>
    <% end %>
  </div>
</div>
