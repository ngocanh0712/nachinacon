<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="font-heading font-bold text-2xl text-gray-800">Kỷ niệm</h1>
      <p class="font-body text-sm text-gray-500 mt-1"><%= @memories.count %> kỷ niệm</p>
    </div>
    <%= link_to new_admin_memory_path, class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-xl font-heading font-semibold text-gray-800 shadow-md hover:shadow-lg transition-all", style: "background: linear-gradient(135deg, #C1DDD8 0%, #A8CEC8 100%);" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      Thêm kỷ niệm
    <% end %>
  </div>

  <!-- Search and Filter -->
  <%= form_with url: admin_memories_path, method: :get, local: true, class: "bg-white rounded-2xl p-6 shadow-md" do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <!-- Search Input -->
      <div class="md:col-span-2">
        <label for="q" class="block font-body text-sm font-medium text-gray-700 mb-2">
          Tìm kiếm
        </label>
        <%= text_field_tag :q, params[:q],
            placeholder: "Tìm theo tiêu đề hoặc mô tả...",
            class: "w-full px-4 py-2.5 font-body text-sm border border-gray-300 rounded-xl focus:ring-2 focus:ring-[#C1DDD8] focus:border-transparent transition-all" %>
      </div>

      <!-- Age Group Filter -->
      <div>
        <label for="age_group" class="block font-body text-sm font-medium text-gray-700 mb-2">
          Giai đoạn
        </label>
        <%= select_tag :age_group,
            options_for_select([["Tất cả", ""]] + Memory::AGE_GROUPS, params[:age_group]),
            class: "w-full px-4 py-2.5 font-body text-sm border border-gray-300 rounded-xl focus:ring-2 focus:ring-[#C1DDD8] focus:border-transparent transition-all" %>
      </div>

      <!-- Memory Type Filter -->
      <div>
        <label for="memory_type" class="block font-body text-sm font-medium text-gray-700 mb-2">
          Loại
        </label>
        <%= select_tag :memory_type,
            options_for_select([["Tất cả", ""], ["Ảnh", "photo"], ["Video", "video"]], params[:memory_type]),
            class: "w-full px-4 py-2.5 font-body text-sm border border-gray-300 rounded-xl focus:ring-2 focus:ring-[#C1DDD8] focus:border-transparent transition-all" %>
      </div>
    </div>

    <!-- Filter Actions -->
    <div class="flex items-center gap-3 mt-4">
      <%= button_tag type: 'submit',
          class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-xl font-heading font-semibold text-white shadow-md hover:shadow-lg transition-all",
          style: "background: linear-gradient(135deg, #C1DDD8 0%, #A8D1BD 100%);" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
        </svg>
        Tìm kiếm
      <% end %>

      <% if params[:q].present? || params[:age_group].present? || params[:memory_type].present? %>
        <%= link_to admin_memories_path, class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-xl font-heading font-semibold text-gray-600 bg-gray-100 hover:bg-gray-200 transition-all" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
          Xóa bộ lọc
        <% end %>
      <% end %>
    </div>
  <% end %>

  <% if @memories.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @memories.each do |memory| %>
        <div class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 group">
          <!-- Thumbnail -->
          <div class="relative h-48 overflow-hidden">
            <% if memory.image_path.present? || memory.media.attached? %>
              <% if memory.memory_type == 'video' %>
                <div class="w-full h-full flex items-center justify-center" style="background: linear-gradient(135deg, #E0EEEB 0%, #F6F2EC 100%);">
                  <div class="w-16 h-16 rounded-full flex items-center justify-center" style="background-color: rgba(0,0,0,0.1);">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-gray-500">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z" />
                    </svg>
                  </div>
                </div>
              <% else %>
                <% if memory.image_path.present? %>
                  <%= image_tag memory.image_path, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
                <% elsif memory.media.attached? %>
                  <%= image_tag memory.media.variant(resize_to_fill: [400, 300]), class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
                <% end %>
              <% end %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center" style="background: linear-gradient(135deg, #E0EEEB 0%, #F6F2EC 100%);">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 text-gray-300">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                </svg>
              </div>
            <% end %>
            <!-- Type badge -->
            <div class="absolute top-3 right-3 px-2.5 py-1 rounded-lg text-xs font-heading font-medium text-gray-700 shadow-sm" style="background-color: rgba(255,255,255,0.9);">
              <%= memory.memory_type == 'photo' ? 'Ảnh' : 'Video' %>
            </div>
          </div>

          <!-- Content -->
          <div class="p-5">
            <div class="flex items-center gap-2 mb-2">
              <span class="font-body text-xs text-gray-500"><%= memory.taken_at.strftime("%d/%m/%Y") %></span>
              <span class="px-2 py-0.5 rounded-full text-xs font-body" style="background-color: #E0EEEB; color: #333;">
                <%= Memory::AGE_GROUPS.find { |g| g.last == memory.age_group }&.first %>
              </span>
            </div>
            <h3 class="font-heading font-semibold text-lg text-gray-800 mb-1 truncate"><%= memory.title %></h3>
            <p class="font-body text-sm text-gray-500 line-clamp-2"><%= memory.caption %></p>

            <!-- Actions -->
            <div class="flex items-center gap-2 mt-4 pt-4 border-t border-gray-100">
              <%= link_to edit_admin_memory_path(memory), class: "flex-1 flex items-center justify-center gap-2 px-3 py-2 rounded-lg font-heading font-medium text-sm text-gray-700 transition-colors hover:bg-gray-100", style: "background-color: #E0EEEB;" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                </svg>
                Sửa
              <% end %>
              <%= button_to admin_memory_path(memory), method: :delete, data: { turbo_confirm: "Xóa kỷ niệm này?" }, class: "flex-1 flex items-center justify-center gap-2 px-3 py-2 rounded-lg font-heading font-medium text-sm text-gray-700 transition-colors cursor-pointer", style: "background-color: #F8D8D8;", onmouseover: "this.style.backgroundColor='#FEE2E2'", onmouseout: "this.style.backgroundColor='#F8D8D8'" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                </svg>
                Xóa
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <% if @pagy.pages > 1 %>
      <div class="mt-8 flex justify-center">
        <%== pagy_nav(@pagy, link_extra: 'class="mx-1 px-4 py-2 rounded-lg font-heading font-medium text-sm transition-all duration-200"',
                      page_link_extra: 'class="hover:bg-gray-100 text-gray-700"',
                      active_link_extra: 'class="text-white shadow-md" style="background: linear-gradient(135deg, #C1DDD8 0%, #A8D1BD 100%);"') %>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white rounded-2xl shadow-md p-12 text-center">
      <div class="w-20 h-20 rounded-full mx-auto mb-6 flex items-center justify-center" style="background-color: #E0EEEB;">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
        </svg>
      </div>
      <h3 class="font-heading font-bold text-xl text-gray-800 mb-2">Chưa có kỷ niệm nào</h3>
      <p class="font-body text-gray-500 mb-6">Bắt đầu lưu giữ những khoảnh khắc đáng nhớ của bé</p>
      <%= link_to new_admin_memory_path, class: "inline-flex items-center gap-2 px-6 py-3 rounded-xl font-heading font-semibold text-gray-800 shadow-md hover:shadow-lg transition-all", style: "background: linear-gradient(135deg, #C1DDD8 0%, #A8CEC8 100%);" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        Thêm kỷ niệm đầu tiên
      <% end %>
    </div>
  <% end %>
</div>
