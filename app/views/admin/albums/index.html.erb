<div class="flex items-center justify-between mb-8">
  <h1 class="font-heading font-bold text-2xl text-gray-800">Albums</h1>
  <%= link_to new_admin_album_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg font-heading font-semibold text-sm btn-hover", style: "background-color: #C1DDD8;" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
    </svg>
    Tạo Album mới
  <% end %>
</div>

<% if @albums.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @albums.each do |album| %>
      <div class="bg-white rounded-xl shadow-soft overflow-hidden card-hover">
        <div class="aspect-video relative overflow-hidden">
          <% if album.cover_photo.attached? %>
            <%= image_tag album.cover_photo.variant(resize_to_fill: [400, 250]), class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center" style="background: linear-gradient(135deg, rgba(192, 223, 208, 0.4) 0%, rgba(193, 221, 216, 0.4) 100%);">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-12 h-12 text-gray-300">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
              </svg>
            </div>
          <% end %>
          <div class="absolute bottom-2 right-2 px-2 py-1 rounded-full text-xs font-heading font-semibold glass">
            <%= album.memory_count %> ảnh
          </div>
        </div>

        <div class="p-4">
          <h3 class="font-heading font-bold text-lg text-gray-800 mb-1"><%= album.name %></h3>
          <% if album.description.present? %>
            <p class="text-sm text-gray-600 line-clamp-2 mb-4"><%= album.description %></p>
          <% end %>

          <div class="flex items-center gap-2">
            <%= link_to edit_admin_album_path(album), class: "flex-1 text-center px-3 py-2 rounded-lg text-sm font-heading font-semibold transition-colors", style: "background-color: #E0EEEB;" do %>
              Sửa
            <% end %>
            <%= button_to admin_album_path(album), method: :delete, data: { turbo_confirm: "Bạn có chắc muốn xóa album này?" }, class: "flex-1 text-center px-3 py-2 rounded-lg text-sm font-heading font-semibold transition-colors cursor-pointer", style: "background-color: #F8D8D8;" do %>
              Xóa
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-16 bg-white rounded-xl">
    <div class="w-16 h-16 rounded-full mx-auto mb-4 flex items-center justify-center" style="background-color: rgba(192, 223, 208, 0.4);">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-8 h-8 text-gray-400">
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
      </svg>
    </div>
    <p class="text-gray-500 mb-4">Chưa có album nào.</p>
    <%= link_to "Tạo album đầu tiên", new_admin_album_path, class: "font-heading font-semibold", style: "color: #A8CEC8;" %>
  </div>
<% end %>
