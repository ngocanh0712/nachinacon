<%= form_with model: [:admin, @album], class: "space-y-6" do |f| %>
  <% if @album.errors.any? %>
    <div class="p-4 rounded-lg" style="background-color: #F8D8D8;">
      <h3 class="font-heading font-semibold text-gray-800 mb-2">Có lỗi xảy ra:</h3>
      <ul class="list-disc list-inside text-sm text-gray-700">
        <% @album.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Tên album", class: "block font-heading font-semibold text-gray-700 mb-2" %>
    <%= f.text_field :name, class: "w-full px-4 py-3 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-[#C1DDD8]", placeholder: "Ví dụ: Sinh nhật 1 tuổi" %>
  </div>

  <div>
    <%= f.label :description, "Mô tả", class: "block font-heading font-semibold text-gray-700 mb-2" %>
    <%= f.text_area :description, rows: 3, class: "w-full px-4 py-3 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-[#C1DDD8]", placeholder: "Mô tả ngắn về album..." %>
  </div>

  <div>
    <%= f.label :cover_photo, "Ảnh bìa", class: "block font-heading font-semibold text-gray-700 mb-2" %>
    <% if @album.cover_photo.attached? %>
      <div class="mb-3">
        <%= image_tag @album.cover_photo.variant(resize_to_fill: [200, 150]), class: "rounded-lg" %>
      </div>
    <% end %>
    <%= f.file_field :cover_photo, accept: "image/*", class: "w-full px-4 py-3 rounded-lg border border-gray-200 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:font-heading file:font-semibold file:bg-[#E0EEEB] file:text-gray-700 hover:file:bg-[#C1DDD8]" %>
  </div>

  <div class="flex items-center gap-4 pt-4">
    <%= f.submit @album.persisted? ? "Cập nhật" : "Tạo album", class: "px-6 py-3 rounded-lg font-heading font-semibold btn-hover cursor-pointer", style: "background-color: #C1DDD8;" %>
    <%= link_to "Hủy", admin_albums_path, class: "px-6 py-3 rounded-lg font-heading font-semibold text-gray-600 hover:text-gray-800" %>
  </div>
<% end %>
