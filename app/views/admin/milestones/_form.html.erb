<style>
  .form-input-secondary:focus { border-color: #F2C2C2 !important; box-shadow: 0 0 0 4px rgba(242,194,194,0.2) !important; outline: none; }
  .form-input-secondary:hover { border-color: #F2C2C2; }
  .upload-zone-secondary:hover { border-color: #F2C2C2 !important; background-color: rgba(242,194,194,0.05) !important; }
</style>

<%= form_with model: [:admin, milestone], local: true, class: "space-y-6" do |f| %>
  <!-- Error messages -->
  <% if milestone.errors.any? %>
    <div class="p-4 rounded-xl border-2" style="background-color: #FEF2F2; border-color: #FECACA;">
      <div class="flex items-start gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-red-500 mt-0.5 flex-shrink-0">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
        </svg>
        <div>
          <p class="font-heading font-semibold text-red-700">Có <%= milestone.errors.count %> lỗi xảy ra:</p>
          <ul class="list-disc list-inside text-sm text-red-600 mt-2 space-y-1">
            <% milestone.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Milestone Type -->
  <div>
    <label for="milestone_milestone_type" class="flex items-center gap-1 text-sm font-semibold text-gray-700 mb-2 font-heading">
      Loại Milestone
      <span class="text-red-500">*</span>
    </label>
    <%= f.select :milestone_type, Milestone::MILESTONE_TYPES.map { |k, v| [v[:name], k] }, {},
      class: "form-input-secondary w-full px-4 py-3 rounded-xl border-2 border-gray-200 transition-all duration-200 font-body cursor-pointer" %>
  </div>

  <!-- Name -->
  <div>
    <label for="milestone_name" class="flex items-center gap-1 text-sm font-semibold text-gray-700 mb-2 font-heading">
      Tên
      <span class="text-red-500">*</span>
    </label>
    <%= f.text_field :name,
      class: "form-input-secondary w-full px-4 py-3 rounded-xl border-2 border-gray-200 transition-all duration-200 font-body placeholder-gray-400",
      placeholder: "VD: Nụ cười đầu tiên" %>
  </div>

  <!-- Description -->
  <div>
    <label for="milestone_description" class="block text-sm font-semibold text-gray-700 mb-2 font-heading">Mô tả</label>
    <%= f.text_area :description,
      rows: 3,
      class: "form-input-secondary w-full px-4 py-3 rounded-xl border-2 border-gray-200 transition-all duration-200 font-body placeholder-gray-400 resize-none",
      placeholder: "Ghi lại chi tiết về milestone này..." %>
  </div>

  <!-- Achieved At -->
  <div>
    <label for="milestone_achieved_at" class="block text-sm font-semibold text-gray-700 mb-2 font-heading">Ngày đạt được</label>
    <%= f.date_field :achieved_at,
      class: "form-input-secondary w-full px-4 py-3 rounded-xl border-2 border-gray-200 transition-all duration-200 font-body" %>
    <p class="text-sm text-gray-500 mt-2 font-body">Để trống nếu chưa đạt được</p>
  </div>

  <!-- Photo -->
  <div>
    <label class="block text-sm font-semibold text-gray-700 mb-2 font-heading">Ảnh</label>

    <!-- Preview existing image -->
    <% if milestone.image_path.present? || milestone.photo.attached? %>
      <div class="mb-4 p-4 rounded-xl bg-gray-50 border-2 border-gray-200">
        <div class="flex items-center gap-4">
          <% if milestone.image_path.present? %>
            <%= image_tag milestone.image_path, class: "w-20 h-20 rounded-lg object-cover" %>
          <% elsif milestone.photo.attached? %>
            <%= image_tag milestone.photo, class: "w-20 h-20 rounded-lg object-cover" %>
          <% end %>
          <div class="flex-1 min-w-0">
            <p class="font-heading font-medium text-gray-800 truncate">
              <%= milestone.image_path.present? ? File.basename(milestone.image_path) : milestone.photo.filename %>
            </p>
            <p class="text-sm text-gray-500 font-body">
              <%= milestone.photo.attached? ? number_to_human_size(milestone.photo.byte_size) : 'Ảnh đã lưu' %>
            </p>
          </div>
          <div class="px-3 py-1 rounded-full text-xs font-body" style="background-color: #F8D8D8; color: #333;">
            Đã tải lên
          </div>
        </div>
      </div>
    <% end %>

    <!-- Image preview container (for new upload) -->
    <div id="milestoneImagePreview" class="hidden mb-4 p-4 rounded-xl bg-gray-50 border-2 border-gray-200">
      <div class="flex items-center gap-4">
        <img id="milestonePreviewImg" src="" alt="Preview" class="w-20 h-20 rounded-lg object-cover">
        <div class="flex-1 min-w-0">
          <p id="milestoneFileName" class="font-heading font-medium text-gray-800 truncate"></p>
          <p id="milestoneFileSize" class="text-sm text-gray-500 font-body"></p>
        </div>
        <button type="button" onclick="clearMilestonePreview()" class="px-3 py-1 rounded-full text-xs font-body hover:bg-red-100 transition-colors" style="background-color: #FEE2E2; color: #DC2626;">
          Xóa
        </button>
      </div>
    </div>

    <div class="relative">
      <%= f.file_field :photo,
        accept: "image/jpeg,image/jpg,image/png,image/webp",
        class: "sr-only",
        id: "milestone_photo_input",
        onchange: "previewMilestoneImage(this)" %>

      <label for="milestone_photo_input"
        class="upload-zone-secondary flex flex-col items-center justify-center p-8 rounded-xl border-2 border-dashed border-gray-300 bg-gray-50 cursor-pointer transition-all duration-200">
        <div class="w-14 h-14 rounded-full flex items-center justify-center mb-3" style="background-color: rgba(242,194,194,0.3);">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7" style="color: #E8B0B0;">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
          </svg>
        </div>
        <p class="font-heading font-semibold text-gray-700">Kéo thả hoặc nhấp để chọn ảnh</p>
        <p class="text-sm text-gray-500 mt-1 font-body">JPG, PNG, WEBP • Tối đa 10MB</p>
      </label>
    </div>
  </div>

  <script>
    function previewMilestoneImage(input) {
      const file = input.files[0];
      if (!file) return;

      if (!file.type.match('image/jpeg') && !file.type.match('image/jpg') && !file.type.match('image/png') && !file.type.match('image/webp')) {
        alert('Chỉ chấp nhận file ảnh (JPG, PNG, WEBP)');
        input.value = '';
        return;
      }

      if (file.size > 10 * 1024 * 1024) {
        alert('File ảnh quá lớn. Vui lòng chọn ảnh nhỏ hơn 10MB');
        input.value = '';
        return;
      }

      const reader = new FileReader();
      reader.onload = function(e) {
        document.getElementById('milestonePreviewImg').src = e.target.result;
        document.getElementById('milestoneFileName').textContent = file.name;
        document.getElementById('milestoneFileSize').textContent = formatFileSize(file.size);
        document.getElementById('milestoneImagePreview').classList.remove('hidden');
      };
      reader.readAsDataURL(file);
    }

    function clearMilestonePreview() {
      document.getElementById('milestone_photo_input').value = '';
      document.getElementById('milestoneImagePreview').classList.add('hidden');
      document.getElementById('milestonePreviewImg').src = '';
    }

    function formatFileSize(bytes) {
      if (bytes === 0) return '0 Bytes';
      const k = 1024;
      const sizes = ['Bytes', 'KB', 'MB', 'GB'];
      const i = Math.floor(Math.log(bytes) / Math.log(k));
      return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
    }
  </script>

  <!-- Buttons -->
  <div class="flex items-center gap-4 pt-4">
    <%= f.submit milestone.persisted? ? "Cập nhật" : "Tạo milestone",
      class: "px-6 py-3 rounded-xl font-heading font-semibold text-gray-800 cursor-pointer shadow-md hover:shadow-lg transition-all duration-200",
      style: "background: linear-gradient(135deg, #F2C2C2 0%, #E8B0B0 100%);" %>
    <%= link_to "Hủy", admin_milestones_path,
      class: "px-6 py-3 rounded-xl font-heading font-semibold text-gray-600 hover:text-gray-800 hover:bg-gray-100 transition-colors" %>
  </div>
<% end %>
