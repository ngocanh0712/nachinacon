<div class="space-y-8">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="font-heading font-bold text-2xl text-gray-800">Milestones</h1>
      <p class="font-body text-sm text-gray-500 mt-1"><%= @achieved.count + @pending.count %> milestones</p>
    </div>
    <%= link_to new_admin_milestone_path, class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-xl font-heading font-semibold text-gray-800 shadow-md hover:shadow-lg transition-all", style: "background: linear-gradient(135deg, #F2C2C2 0%, #E8B0B0 100%);" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      Thêm Milestone
    <% end %>
  </div>

  <!-- Achieved Milestones -->
  <div>
    <div class="flex items-center gap-3 mb-4">
      <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background-color: #C0DFD0;">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-700">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h2 class="font-heading font-semibold text-xl text-gray-800">Đã đạt được (<%= @achieved.count %>)</h2>
    </div>

    <% if @achieved.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @achieved.each do |milestone| %>
          <div class="bg-white rounded-2xl p-5 shadow-md hover:shadow-lg transition-shadow duration-300">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, #C0DFD0 0%, #A8D1BD 100%);">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-700">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="font-heading font-semibold text-gray-800 truncate"><%= milestone.name %></h3>
                <p class="font-body text-sm text-gray-500"><%= milestone.achieved_at.strftime("%d/%m/%Y") %></p>
                <% if milestone.description.present? %>
                  <p class="font-body text-sm text-gray-600 mt-2 line-clamp-2"><%= milestone.description %></p>
                <% end %>
              </div>
            </div>
            <div class="flex items-center gap-2 mt-4 pt-4 border-t border-gray-100">
              <%= link_to edit_admin_milestone_path(milestone), class: "flex-1 flex items-center justify-center gap-2 px-3 py-2 rounded-lg font-heading font-medium text-sm text-gray-700 transition-colors hover:bg-gray-100", style: "background-color: #E0EEEB;" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                </svg>
                Sửa
              <% end %>
              <%= button_to admin_milestone_path(milestone), method: :delete, data: { turbo_confirm: "Xóa milestone này?" }, class: "flex-1 flex items-center justify-center gap-2 px-3 py-2 rounded-lg font-heading font-medium text-sm text-gray-700 transition-colors cursor-pointer", style: "background-color: #F8D8D8;", onmouseover: "this.style.backgroundColor='#FEE2E2'", onmouseout: "this.style.backgroundColor='#F8D8D8'" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                </svg>
                Xóa
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-2xl p-8 text-center shadow-sm">
        <p class="font-body text-gray-500">Chưa có milestone nào được đánh dấu hoàn thành.</p>
      </div>
    <% end %>
  </div>

  <!-- Pending Milestones -->
  <div>
    <div class="flex items-center gap-3 mb-4">
      <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background-color: #F8D8D8;">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-700">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h2 class="font-heading font-semibold text-xl text-gray-800">Chờ đạt được (<%= @pending.count %>)</h2>
    </div>

    <% if @pending.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @pending.each do |milestone| %>
          <div class="bg-white rounded-2xl p-5 shadow-md hover:shadow-lg transition-shadow duration-300" style="opacity: 0.8;" onmouseover="this.style.opacity='1'" onmouseout="this.style.opacity='0.8'">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0" style="background: linear-gradient(135deg, #E0EEEB 0%, #D0E0DD 100%);">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-400">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="font-heading font-semibold text-gray-800 truncate"><%= milestone.name %></h3>
                <p class="font-body text-sm text-gray-400">Chưa đạt được</p>
                <% if milestone.description.present? %>
                  <p class="font-body text-sm text-gray-500 mt-2 line-clamp-2"><%= milestone.description %></p>
                <% end %>
              </div>
            </div>
            <div class="flex items-center gap-2 mt-4 pt-4 border-t border-gray-100">
              <%= link_to edit_admin_milestone_path(milestone), class: "flex-1 flex items-center justify-center gap-2 px-3 py-2 rounded-lg font-heading font-medium text-sm text-gray-700 transition-colors", style: "background: linear-gradient(135deg, #C0DFD0 0%, #A8D1BD 100%);" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Đánh dấu hoàn thành
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-2xl p-8 text-center shadow-sm">
        <div class="w-16 h-16 rounded-full mx-auto mb-4 flex items-center justify-center" style="background-color: #C0DFD0;">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-gray-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <p class="font-body text-gray-600 font-medium">Tất cả milestones đã được đánh dấu hoàn thành!</p>
      </div>
    <% end %>
  </div>
</div>
