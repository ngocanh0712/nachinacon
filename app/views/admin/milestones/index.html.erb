<div class="py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="font-heading font-bold text-3xl text-gray-800">Milestones</h1>
    <%= link_to new_admin_milestone_path, class: "flex items-center gap-2 px-4 py-2 rounded-lg font-medium transition-colors", style: "background-color: #F2C2C2; color: #333;" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      Thêm mới
    <% end %>
  </div>

  <!-- Achieved Milestones -->
  <div class="mb-8">
    <h2 class="font-heading font-semibold text-xl text-gray-800 mb-4">Đã đạt được (<%= @achieved.count %>)</h2>
    <% if @achieved.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @achieved.each do |milestone| %>
          <div class="bg-white rounded-xl p-4 shadow-sm flex items-start gap-4">
            <div class="w-12 h-12 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: #C0DFD0;">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-heading font-semibold text-gray-800"><%= milestone.name %></h3>
              <p class="text-sm text-gray-500"><%= milestone.achieved_at.strftime("%d/%m/%Y") %></p>
              <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= milestone.description %></p>
              <div class="flex items-center gap-2 mt-3">
                <%= link_to edit_admin_milestone_path(milestone), class: "text-sm font-medium", style: "color: #666;" do %>
                  Sửa
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">Chưa có milestone nào được đánh dấu hoàn thành.</p>
    <% end %>
  </div>

  <!-- Pending Milestones -->
  <div>
    <h2 class="font-heading font-semibold text-xl text-gray-800 mb-4">Chờ đạt được (<%= @pending.count %>)</h2>
    <% if @pending.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @pending.each do |milestone| %>
          <div class="bg-white rounded-xl p-4 shadow-sm flex items-start gap-4 opacity-75">
            <div class="w-12 h-12 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: #E0EEEB;">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-400">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-heading font-semibold text-gray-800"><%= milestone.name %></h3>
              <p class="text-sm text-gray-500">Chưa đạt được</p>
              <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= milestone.description %></p>
              <div class="flex items-center gap-2 mt-3">
                <%= link_to edit_admin_milestone_path(milestone), class: "text-sm font-medium", style: "color: #666;" do %>
                  Đánh dấu hoàn thành
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">Tất cả milestones đã được đánh dấu hoàn thành!</p>
    <% end %>
  </div>
</div>
