<%= form_with(model: [:admin, record], class: "space-y-6") do |f| %>
  <% if record.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-xl p-4">
      <p class="font-heading font-semibold text-red-700 text-sm mb-2"><%= record.errors.count %> lỗi:</p>
      <ul class="list-disc pl-5 space-y-1">
        <% record.errors.full_messages.each do |msg| %>
          <li class="font-body text-sm text-red-600"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-2xl p-6 shadow-md space-y-5">
    <!-- Date -->
    <div>
      <label class="block font-heading font-semibold text-sm text-gray-700 mb-2">Ngày đo</label>
      <%= f.date_field :recorded_on, class: "w-full px-4 py-3 rounded-xl border border-gray-200 font-body focus:outline-none focus:border-gray-400 transition-colors" %>
    </div>

    <!-- Measurements -->
    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="block font-heading font-semibold text-sm text-gray-700 mb-2">Chiều cao (cm)</label>
        <%= f.number_field :height_cm, class: "w-full px-4 py-3 rounded-xl border border-gray-200 font-body focus:outline-none focus:border-gray-400 transition-colors", step: 0.1, min: 0, placeholder: "75.5" %>
      </div>
      <div>
        <label class="block font-heading font-semibold text-sm text-gray-700 mb-2">Cân nặng (kg)</label>
        <%= f.number_field :weight_kg, class: "w-full px-4 py-3 rounded-xl border border-gray-200 font-body focus:outline-none focus:border-gray-400 transition-colors", step: 0.01, min: 0, placeholder: "9.50" %>
      </div>
    </div>

    <!-- Notes -->
    <div>
      <label class="block font-heading font-semibold text-sm text-gray-700 mb-2">Ghi chú</label>
      <%= f.text_area :notes, class: "w-full px-4 py-3 rounded-xl border border-gray-200 font-body focus:outline-none focus:border-gray-400 transition-colors", rows: 3, placeholder: "Ghi chú thêm..." %>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex items-center gap-3">
    <%= f.submit record.persisted? ? "Cập nhật" : "Lưu dữ liệu", class: "px-6 py-3 rounded-xl font-heading font-semibold text-white shadow-lg transition-all hover:shadow-xl hover:scale-105 cursor-pointer", style: "background: linear-gradient(135deg, #C1DDD8, #A8CEC8);" %>
    <%= link_to "Hủy", admin_growth_records_path, class: "px-6 py-3 rounded-xl font-heading font-semibold text-gray-600 transition-all hover:bg-gray-100", style: "background:rgba(243,244,246,0.8);" %>
  </div>
<% end %>
